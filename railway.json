{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements.txt"
    },
    "deploy": {
        "startCommand": "gunicorn run:app",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    },
    "github": {
        "branch": "main",
        "deploy": true,
        "autoDeploy": true
    },
    "environments": {
        "production": {
            "variables": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "production",
                "PYTHON_VERSION": "3.13.2"
            }
        }
    }
}
